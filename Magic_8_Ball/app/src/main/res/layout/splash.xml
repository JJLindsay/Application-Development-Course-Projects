<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Written by: J. Lindsay"
            android:id="@+id/textView"
            android:gravity="bottom|right"
            android:background="@drawable/omnipotent_eightball" android:textColor="#000000"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Omnipotent Eight Ball!"
            android:id="@+id/textView2" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:textStyle="bold" android:textSize="35sp" android:textColor="#000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Images by: fineartamerica.com, "
            android:id="@+id/textView3"
            android:textSize="20sp"
            android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_marginBottom="103dp" android:textStyle="bold|italic"/>
</RelativeLayout>